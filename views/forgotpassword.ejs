<body class="layout-top-nav">
    <div class="wrapper signin-pg ">
        <section class="content">
            <div class="row">
                <div class="container">
                    <div class="login-box">
                        <div class="login-logo">
                            <a href="/">META</a>
                        </div>
                        <div class="col-md-12">
                            <div class="signup-form">
                                <div class="col-xs-12">
                                    <p class="login-box-msg">Forgot password</p>
                                    <div id='responseDiv'>
                                        <!-- response here-->
                                    </div>
                                    <form id="forgotpass">
                                        <div id="toHideIfSuccess">
                                            <label class="label-form">Email Address</label>
                                            <div class="form-group has-feedback">
                                                <input type="text" autocomplete="off" name="email" id="email" class="form-control form-login-interface" required  onchange="document.getElementById('responseDiv').style.display = 'none';">
