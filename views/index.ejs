<!-- Upload script -->
<script>
    window.addEventListener('load', function(){

        function goUpload(){

            let xhr = new XMLHttpRequest();
            let fd = new FormData(form); // bind form data object and form element
            
            xhr.addEventListener('load', function(event){
                console.log(event.target.response);
                let resFromServer = JSON.parse(event.target.response);
                document.getElementById('responseDiv').style.display='block';

                function resDiv(){
                    let responseDiv = document.getElementById('responseDiv');
                    
                    if(resFromServer.err){

                        document.getElementById('daterange_picker').removeAttribute("disabled");
                        document.getElementById('submitactivity').removeAttribute("disabled");
                        document.getElementById('cancelactivity').removeAttribute("disabled");
                        document.getElementById('activity_title').removeAttribute("disabled");
                        document.getElementById('tdn_no').removeAttribute("disabled");
                        document.getElementById('mrb_no').removeAttribute("disabled");
                        document.getElementById('ec_no').removeAttribute("disabled");
                        document.getElementById('activity_type').removeAttribute("disabled");
                        document.getElementById('process_name').removeAttribute("disabled");
                        document.getElementById('activity_details').removeAttribute("disabled");

                        if (responseDiv.classList) { 
                            responseDiv.classList.add("responseDivErr");
                            responseDiv.innerHTML = resFromServer.err
                        } else {
                            // For IE9
                            var classes = responseDiv.className.split(" ");
                            var i = classes.indexOf("responseDivErr");

                            if (i >= 0) {
                                classes.splice(i, 1);
                            } else { 
                                classes.push("responseDivErr");
                                responseDiv.className = classes.join(" "); 
                                responseDiv.innerHTML = resFromServer.err
                            }
                        }

                    } else {

                        if (responseDiv.classList) { 
                            responseDiv.classList.add("responseDivSuccess");
                            responseDiv.innerHTML = resFromServer.auth;

                            let hideDiv = document.getElementById('toHideButtonIfSuccess');
                            hideDiv.style.display = "none";
                            
                            setTimeout(function(){
                                window.location.href="/";
                            }, 50);

                        } else {
                            // For IE9
                            var classes = responseDiv.className.split(" ");
                            var i = classes.indexOf("responseDivSuccess");

                            if (i >= 0) {
                                classes.splice(i, 1);
                            } else { 
                                classes.push("responseDivSuccess");
                                responseDiv.className = classes.join(" "); 
                                responseDiv.innerHTML = resFromServer.auth;

                                let hideDiv = document.getElementById('toHideButtonIfSuccess');
                                hideDiv.style.display = "none";
                                
                                setTimeout(function(){
                                    window.location.href="/";
                                }, 50);
                            }
                        }
                    }

                    
                }

                resDiv();
            });

            xhr.addEventListener('error', function(event){
                alert('Something went wrong.');
            });

            xhr.open('POST', '/api/activity');
            xhr.send(fd);

        }

        // access FORM element
        let form = document.getElementById('uploadactivity');
        // take over submit event
        form.addEventListener('submit', function(event){
            event.preventDefault();
            //document.getElementById('responseDiv').style.display="none";
            goUpload();
            document.getElementById('daterange_picker').setAttribute("disabled", "disabled");
            document.getElementById('submitactivity').setAttribute("disabled", "disabled");
            document.getElementById('cancelactivity').setAttribute("disabled", "disabled");
            document.getElementById('activity_title').setAttribute("disabled", "disabled");
            document.getElementById('tdn_no').setAttribute("disabled", "disabled");
            document.getElementById('mrb_no').setAttribute("disabled", "disabled");
            document.getElementById('ec_no').setAttribute("disabled", "disabled");
            document.getElementById('activity_type').setAttribute("disabled", "disabled");
            document.getElementById('process_name').setAttribute("disabled", "disabled");
            document.getElementById('activity_details').setAttribute("disabled", "disabled");

        });


    });
</script>
