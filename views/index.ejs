                            <div class="box-header" style="position:initial;  padding: 4px 10px 0;">
                                <%= greet %>
                            </div>
                            <div class="box-body ask-activity-body">
                                <h4 class="box-title ask-activity-header"><a href="#activity" data-toggle="modal" data-target="#modalactivity" class="ask-activity-link">What is your activity?</a></h4>
                            </div>
                                <div class="modal modal-default" id="modalactivity">
                                    <div class="modal-dialog modal-settings">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                                <h2 class="activity-modal-head">Add activity</h2>
                                            </div>
                                            <form id="uploadactivity">
                                                <div class="modal-body">
                                                        <input type="hidden" name="authenticity_token" value="<%= authenticity_token %>">
                                                        <label class="activity-modal-head">Datetime range:</label>
                                                        <div class="form-group">
                                                            <div class="input-group">
                                                                <div class="input-group-addon">
                                                                    <i class="fa fa-calendar"></i>
                                                                </div>
                                                                <input type="text" name="daterange" class="form-control daterangepicker-dropdown" id="daterange_picker">
                                                            </div>
                                                        </div>
                                                        <label class="activity-modal-head">Activity:</label>
                                                        <div class="form-group has-feedback">
                                                            <input type="text" name="activity_title" id="activity_title" class="form-control" required pattern=".{0}|.{5,20}" title="Activity name should be atleast 5 to 20 characters."  onchange="document.getElementById('responseDiv').style.display = 'none';" >
                                                        </div>
                                                        <label class="activity-modal-head">TDN #:</label>
                                                        <div class="form-group ">
                                                            <input type="text" name="tdn_no" id="tdn_no" class="form-control"  onchange="document.getElementById('responseDiv').style.display = 'none';">
                                                        </div>
                                                        <label class="activity-modal-head">MRB #:</label>
                                                        <div class="form-group ">
                                                            <input type="text" name="mrb_no" id="mrb_no" class="form-control"  onchange="document.getElementById('responseDiv').style.display = 'none';">
                                                        </div>
                                                        <label class="activity-modal-head">EC #:</label>
                                                        <div class="form-group">
                                                            <input type="text" name="ec_no" id="ec_no" class="form-control"  onchange="document.getElementById('responseDiv').style.display = 'none';">
                                                        </div>
                                                        <label class="activity-modal-head">Type:</label>
                                                        <div class="form-group">
                                                            <select class="form-control select2 select2-hidden-accessible" id="activity_type" name="activity_type" style="width:100%;" tabindex="-1" aria-hidden="true">
                                                                <option value="STO" selected>STO</option>
                                                                <option value="COL" >COL</option>
                                                                <option value="FTO" >FTO</option>
                                                            </select>
                                                        </div>
                                                        <label class="activity-modal-head">Process:</label>
                                                        <div class="form-group has-feedback">
                                                            <select class="form-control select2 select2-hidden-accessible" id="process_name" name="process_name" style="width:100%;" tabindex="-1" aria-hidden="true">
